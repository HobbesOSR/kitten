menu "Device drivers"

#
# Device Drivers
#
config VGA_CONSOLE
	bool "VGA console"
	default PC

config SERIAL_CONSOLE
	bool "Serial console support"
	default PC

config KEYBOARD
	bool
	default PC

config RCAL0_CONSOLE
	bool "Cray XT3 L0 console support"
	depends on CRAY_XT
	default CRAY_XT

config SEASTAR
	bool "Cray XT3 Seastar network"
	depends on CRAY_XT
	default CRAY_XT

endmenu
